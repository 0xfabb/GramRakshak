generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())  
  name      String
  email     String   @unique
  phone     String   @unique
  address   String
  password  String
  role      Role     @default(VILLAGER)
  createdAt DateTime @default(now())

  @@map("users") // Ensures table name is "users"
}

enum Role {
  VILLAGER
  ADMIN
}
